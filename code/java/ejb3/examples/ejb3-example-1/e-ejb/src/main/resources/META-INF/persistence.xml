<?xml version="1.0" encoding="UTF-8"?>

<persistence>
	<persistence-unit name="ePersistence" transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:/eDs</jta-data-source>
		<class>hell.cenobites.java.ejb3.examples.one.model.Artist</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLInnoDBDialect" />
			<property name="hibernate.show_sql" value="false" />
		</properties>
	</persistence-unit>
</persistence>
